@model dynamic

    @{
        ViewBag.Title = "EventPlanner";
        Layout = "~/Views/Shared/_Layout.cshtml";
    }

<div class="jumbotron">
    <h2>EventPlanner</h2>

    Jaja, da's hier een keipraktische applicatie.
</div>

<div class="well" ng-app>
    <div>
        <label>Name: </label>
        <input type="text" ng-model="yourName" placeholder="Enter your name here" />
    </div>
    <hr />
    <h1 ng-show="yourName != undefined">Hello {{1 + 1}} {{yourName}}</h1>
</div>